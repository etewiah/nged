<body  ng-app="baseApp">
        <div id="root">
          <div class="" ng-controller="LayoutCtrl" >
            <div id="seo-status" data-status="{{ status }}" ></div>
            <nav class="top-bar" style="margin-bottom: 0px;">
              <ul class="six columns centered">
                <!-- Title Area -->
                <li class="name">
                  <h1>
                    <a class="brand" href="/#!/" >
                      <span style="font-family: 'Jolly Lodger', cursive;font-size: 50px;font-weight: bold;color:#339BB9">Corta</span>
                      <span style="font-family: 'Jolly Lodger', cursive;font-size: 50px;font-weight: normal;color:#C81419">Pincha</span>
                      - the best way to find out what is happening in Spain ;)
                    </a>
                  </h1>
                </li>
                <li class="toggle-topbar">
                  <a href="#"></a>
                </li>
              </ul>

              <section>
                <!-- Right Nav Section -->
                <ul class="right">

                  <li class="has-dropdown">
                    <a>{{selectedCityName}}</a>
                    <ul class="dropdown">
                      <li ng-repeat="city in citiesMenu" ng-class="{'active':city.isSelectedCity}" >
                        <a ng-click="changeCity(city.name)">{{ city.name}}</a>
                      </li>
                      <li><add-city-modal></add-city-modal> </li>
                      <li class="divider"></li>
                    </ul>
                  </li>

                  <li ng-class="languageString == 'en'  &amp;&amp; 'active' || ''" >
                    <a href="#" ng-click="languageChanged($event, 'en')" ></a>
                  </li>
                  <li ng-class="languageString == 'es'  &amp;&amp; 'active' || ''">
                    <a href="#" ng-click="languageChanged($event, 'es')" ></a>
                  </li>

                </section>
              </nav>

              <!-- start 2nd nav bar -->
              <global-nav></global-nav>

              <!-- end 2nd nav bar --> 

            </div>



            <%= yield %>
            <div id="root_footer" >
        



            </div>
          </div>

